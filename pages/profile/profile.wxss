/* pages/profile/profile.wxss */
.container {
  padding: 30rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading {
  color: #999;
  font-size: 28rpx;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 100rpx;
}

/* 饭店集列表 */
.sets-container {
  margin-top: 20rpx;
}

.set-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.set-public {
  display: inline-block !important;
  margin-top: 10px;
  padding: 2px 8px;
  background-color: #f0f0f0;
  color: #999;
  font-size: 12px;
  border-radius: 10px;
}

.set-info {
  flex: 1;
  position: relative;
  padding-right: 20px;
}

.set-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.set-meta {
  font-size: 24rpx;
  color: #666;
}

.delete-btn {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  color: #FF5252;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  text-align: center;
  min-width: 60rpx;
  width: auto;
  z-index: 2;
}

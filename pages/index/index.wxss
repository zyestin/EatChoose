/* pages/index/index.wxss */
.container {
  padding: 30rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading {
  color: #999;
  font-size: 28rpx;
}

/* 创建按钮 */
.create-btn {
  margin-bottom: 30rpx;
}

.btn {
  background-color: #FF9500;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 40rpx;
  text-align: center;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 100rpx;
}

/* 饭店集列表 */
.sets-container {
  margin-top: 20rpx;
}

.set-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.set-info {
  flex: 1;
}

.set-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.set-meta {
  font-size: 24rpx;
  color: #666;
}

.delete-btn {
  color: #FF3B30;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: rgba(255, 59, 48, 0.1);
}